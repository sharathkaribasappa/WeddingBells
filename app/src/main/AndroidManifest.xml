<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andriod.weddingbells">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".notUsed.EventList"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".notUsed.EventDetailsActivity"
            android:label="Details"
            android:theme="@style/AppThemeMaterial">
            <activity
                android:name=".RegistrationActivity"
                android:label="@string/register"
                android:theme="@style/AppTheme.NoActionBar" />
        </activity>
        <activity
            android:name=".cardlayoutfunctionality.ListEventsActivityRedone"
            android:label="@string/EventsList"
            android:theme="@style/AppCompatTheme"></activity>
        <activity
            android:name=".cardlayoutfunctionality.EventDetailsActivityNew"
            android:label="Details"
            android:theme="@style/AppCompatTheme"></activity>
        <activity
            android:name=".cardlayoutfunctionality.CreateEvent"
            android:theme="@style/AppCompatTheme"></activity>
    </application>

</manifest>
